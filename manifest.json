{
	"manifest_version": 2,
	"name": "行走记录仪",
	"version": "1.0",
    "default_locale" : "zh_CN", 
	"description": "记录浏览的途径",
	"icons": {
        "128": "images/icon128.png"
    },
    "app" : {
        "background": {
            "scripts" : ["background.js"]
            //"page" : "background.html",
            //"persistent" : false
        }
    },

    //"background" : {
        //"page" : "background.html",
        //"persistent" : false
    //}
//	"browser_action": {
		//"default_icon": "images/icon19.png",
        //"default_title" : "everyone need to die"
	//},
	"permissions": [
        "notifications", 
        "fullscreen",
        "storage",
        "tabs",
        "webNavigation",
        "alarms",
        "activeTab",
        "background",
        "bookmarks",
        "sessions", 
        "webview",
        "<all_urls>",
        {"fileSystem" : ["write"]}
    ]
}
